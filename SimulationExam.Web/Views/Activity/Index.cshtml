@using SimulationExam.Web.Models

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Activities</h2>

@model ICollection<Activity>

<table class="table table-hover">
    <thead>
        <th>Name</th>
        <th>Actions</th>
    </thead>
    <tbody>
    @foreach (var activity in Model)
    {
        <tr>
            <td>@activity.Name</td>
            <td>
                <a href="#" class="btn btn-primary"><i class="glyphicon glyphicon-eye-open"></i> View</a>
                <a href="#" class="btn btn-warning"><i class="glyphicon glyphicon-wrench"></i> Edit</a>
            </td>
        </tr>
    }        
    </tbody>
</table>


