@using SimulationExam.Web.Models

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Activities</h2>

@model ICollection<Activity>

<table class="table table-hover">
    <thead>
        <th>Name</th>
        <th>Actions</th>
    </thead>
    <tbody>
    @foreach (Activity activity in Model)
    {
        <tr>
            <td>@activity.Name</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = activity.Id }, new { @class = "btn btn-primary" })
             <a href="#" class="btn btn-warning"><i class="glyphicon glyphicon-wrench"></i> Edit</a>
            </td>
        </tr>
    }        
    </tbody>
</table>


