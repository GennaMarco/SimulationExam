@using SimulationExam.Web.Models

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Customers</h2>

@model ICollection<User>

<table class="table table-hover">
    <thead>
    <th>Name</th>
    <th>Email</th>
    <th>Actions</th>
    </thead>
    <tbody>
        @foreach (User user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = user.Id }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Delete", "Delete", new { id = user.Id }, new { @class = "btn btn-danger", data_role = "delete-link" })
                </td>
            </tr>
        }
        <tr>
            <td>
                @Html.ActionLink("Create", "Create", null, new { @class = "btn btn-success" })
            </td>
            <td></td>
            <td></td>
        </tr>
    </tbody>
</table>
